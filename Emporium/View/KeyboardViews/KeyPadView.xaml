                                 Visibility="{Binding CapsDisabled, Converter={StaticResource converter}}"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Center"
                                 Height="8" Margin="8,0,0,0" StrokeThickness="0.5">
